# This file is generated by Nx.
#
# Build the docker image with `npx nx docker-build todo`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t todo`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system todo && \
          adduser --system -G todo todo

COPY dist/apps/todo todo
RUN chown -R todo:todo .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix todo --omit=dev -f install

CMD [ "node", "todo" ]
